{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":disableDependencyDashboard"
	],
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": ["^*.gemspec"],
			"matchStrings": [
				".*\\.add_(:?(?<depType>.*?)_)?dependency\\s*(['\"])(?<depName>[^'\"]+)(['\"])(\\s*,\\s*(?<currentValue>(['\"])[^'\"]+['\"](\\s*,\\s*['\"][^'\"]+['\"])?))?"
			],
			"datasourceTemplate": "rubygems",
			"versioningTemplate": "ruby"
		}
	],
	"packageRules": [
		{
			"matchPackagePatterns": ["^remark"],
			"matchCategories": ["node"],
			"groupName": "remark packages"
		},
		{
			"matchPackagePatterns": ["^bundler"],
			"matchCategories": ["ruby"],
			"groupName": "Bundler packages"
		},
		{
			"matchPackagePatterns": ["^rubocop"],
			"matchCategories": ["ruby"],
			"groupName": "RuboCop packages"
		},
		{
			"matchPackagePatterns": ["^simplecov"],
			"matchCategories": ["ruby"],
			"groupName": "SimpleCov packages"
		},
		{
			"matchPackagePatterns": [
				"^toys",
				"_toys$"
			],
			"matchCategories": ["ruby"],
			"groupName": "Toys packages"
		}
	],
	"rangeStrategy": "replace"
}
